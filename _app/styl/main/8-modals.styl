.fancybox-bg
	background-color #fff
.modal
	display none
	cursor auto !important
	background-color: transparent
	width auto
	overflow hidden
	@media screen and (max-width 386px)
		padding 15px
	&-video
		width 100%
		max-width 800px
	&-wrapper
		padding 30px
		background-color #fff
		box-shadow: 0px 7px 13.76px 2.24px rgba(0, 0, 0, 0.08);
		border-radius: 10px
		position relative
		@media screen and (max-width 560px)
			padding 20px
		@media screen and (max-width 386px)
			padding 30px 10px 10px
		&:before
			content: ''
			display block
			position absolute
			width 90%
			height: 50px
			background-color: #fff
			bottom: -10px
			left 0
			right 0
			margin 0 auto
			border-radius: 10px
			box-shadow: 0px 7px 13.76px 2.24px rgba(0, 0, 0, 0.08);
			z-index -1
.fancybox-slide--html .fancybox-close-small
	color #454545
	opacity 1
	transition: all .5s ease
	outline: 0
	padding 0
.video-wrapper-modal
	width 100%
	max-width 650px
	margin 0 auto