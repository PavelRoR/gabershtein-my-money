#video
	background-image: url(../img/backs/clouds.png)
	background-repeat: no-repeat
	background-position: center
	background-size contain
.video-img
	position relative
	text-align center
	&-inner
		display block
		margin 0 auto 40px
		width 100%
		max-width 810px
	a
		display inline-block
		position absolute
		top calc(50% - 60px)
		left 0
		right 0
		margin: 0 auto
		z-index 40
		width 120px
		@media screen and (max-width 560px)
			width 100px
			top calc(50% - 50px)
		@media screen and (max-width 386px)
			width 60px
			top calc(50% - 30px)
		&:before
			content ''
			display block
			position absolute
			width 150px
			height: 150px
			border-radius: 50%
			border: 2px solid #dd7770
			top -14px
			left -16px
			animation: shine
			animation-duration: 1.3s;
			animation-fill-mode: both;
			animation-iteration-count: infinite;
			z-index 10
			animation-direction: alternate-reverse;
			@media screen and (max-width 560px)
				width 120px
				height: 120px
				left: -10px
				top -10px
			@media screen and (max-width 386px)
				width 80px
				height: 80px
.video-img-play
	position relative
	z-index 30
	width 100%
@keyframes shine
	0%
		transform: scale(0)
		opacity 0
	50%
		transform: scale(0.5)
		opacity .5
	100%
		transform: scale(1.1)
		opacity 1