#get
	padding 100px 0
	@media screen and (max-width 560px)
		padding 90px 0 60px
.general-img-get
	top -300px
	left -150px
	@media screen and (max-width 560px)
		width 160px
		left -120px
		top -200px
	@media screen and (max-width 386px)
		left -130px
		top -100px
.get-item
	width 100%
	max-width 380px
	margin: 0 auto 30px
	position relative
	@media screen and (max-width 991px)
		margin-bottom: 50px
	@media screen and (max-width 560px)
		margin-bottom: 35px
	&-img
		margin-bottom: 40px
		position relative
		@media screen and (max-width 560px)
			margin-bottom: 20px
		img
			display block
			width 100%
		&:before
			content: ''
			display block
			position absolute
			bottom: -22px
			left 0
			right 0
			margin 0 auto
			border-radius: 50%;
			background-color: rgb(227,227,226)
			background-image: linear-gradient(to top, rgb(168,167,164) 0%, rgb(227,227,226) 100%);
			width: 44px;
			height: 44px;
			border: 8px solid #fff
		&:after
			content: ''
			display block
			position absolute
			bottom: -4px
			left 1px
			right 0
			margin 0 auto
			width 9px
			height: 12px
			border-bottom: 2px solid #fff
			border-right: 2px solid #fff
			transform: rotate(35deg)
	&-text
		text-align center
		font-family: M
		font-size: 20px
		font-weight: bold
		@media screen and (max-width 560px)
			font-size: 18px
.button-wrapper-get
	margin-top: 50px
	@media screen and (max-width 560px)
		margin-top: 0