#packet
	padding 100px 0 0
	@media screen and (max-width 560px)
		padding 60px 0 0
.packet-item-wrapper
	position relative
	width 100%
	max-width 400px
	margin 0 auto
	border-radius: 10px
	background-color #fff
	box-shadow: 0px 7px 13.76px 2.24px rgba(0, 0, 0, 0.08);
	padding 30px
	@media screen and (max-width 560px)
		margin-bottom: 50px
		padding 20px
	&:before
		content: ''
		display block
		position absolute
		bottom: -10px
		left 0
		right 0
		margin 0 auto
		border-radius: 10px
		width 90%
		height: 100px
		background-color #fff
		box-shadow: 0px 7px 13.76px 2.24px rgba(0, 0, 0, 0.08);
		z-index -1
.cost
	p
		margin: 30px 0
		font-family: ADP
		font-size: 26px
		font-style: italic
		text-align center
		@media screen and (max-width 386px)
			margin 20px 0
			font-size: 22px
		span
			display block
			margin-bottom: 5px
			font-family: C
			font-size: 52px
			font-weight: bold
			font-style: normal
			@media screen and (max-width 386px)
				font-size: 40px
.button-cost
	padding 30px
	@media screen and (max-width 386px)
		padding 20px 15px
.checking
	display: table;
	width auto
	// max-width 455px
	margin: 15px 0 0
	text-align: left
@keyframes pulse
	0%
		box-shadow: 0 0 0 0 rgba(red, .12)
	100%
		box-shadow: 0 0 15px 10px rgba(red, .12)
.checking .check-label
	line-height: 22px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 25px;
	text-align: left;
	font-family: C
	// font-size: 13px
	font-size: 16px
	font-weight: 300
	// color #b5b3b3
	color #000
	@media screen and (max-width 767px)
		line-height: 18px
.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed transparent
	display: inline
	color #b5b3b3
	&:focus
		border-bottom-color: transparent
		color #b5b3b3
	&:hover
		border-bottom-color: inherit
		text-decoration: none
		color #b5b3b3
.checking .check-label:before
	content: '';
	background-color: red;
	position: absolute;
	left: 0;
	top: 3px;
	border-radius: 5px;
	width: 18px;
	height: 18px;
	animation: pulse
	animation-duration: .7s
	animation-iteration-count: infinite
	animation-timing-function: ease-out;
.checking .check-label:after
	content: '';
	position: absolute;
	left: 6px;
	top: -10px;
	width: 6px;
	height: 10px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 2px solid #fff;
	border-right: 2px solid #fff;
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
.check
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
.check:checked + .check-label:before
	// background-color: rgb(173,200,179)
	background-color: #000
	// background-image: linear-gradient(to top, rgb(173,200,179) 0%, rgb(118,155,114) 100%);
	// box-shadow: inset 0px 17px 20.16px 0.84px rgba(255, 255, 255, 0.89);
	animation: none
.check:checked + .check-label:after
	opacity: 1;
	top: 6px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
.button-cost-disabled
	background-image: none
	background-color: grey
	box-shadow: inset 0px 17px 20.16px 0.84px rgba(255,255,255,0.7),0 5px 0 0 #aaa